@page "/"
@inject MailRepository repository
<div class="flex justify-center border-gray-400 my-6">
    <h3 class="tracking-widest text-xl leading-tight sm:leading-normal my-1">
        Choose your instrument
    </h3>
</div>

<div class="my-6 flex flex-col space-y-4 justify-between lg:flex-row lg:space-y-0 lg:space-x-4">

    <InstrumentCard Name="Accordion"
                    Link="accordion"
                    ImageUrl="img/accordion/accordion-cover.jpg" />

    <InstrumentCard Name="Violin"
                    Link="violin"
                    ImageUrl="img/violin/violin-cover.png" />

    <InstrumentCard Name="Cello"
                    Link="cello"
                    ImageUrl="img/cello/cello-cover.png" />

</div>

<button @onclick="OnClicked">
    Test
</button>

@code {

    private async Task OnClicked()
    {
        await repository.Ping();
    }
}
